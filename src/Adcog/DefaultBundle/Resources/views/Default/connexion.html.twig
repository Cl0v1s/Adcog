{% extends 'AdcogDefaultBundle::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('default_connexion') }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            <h2>Espace utilisateur</h2>
            <form class="form-horizontal" action="{{ path('default_check') }}" method="POST" novalidate>
                <div class="form-group">
                    <label class="col-lg-4 control-label" for="username">Email *</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ username }}" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label" for="password">Mot de passe *</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="password" id="password" name="_password" placeholder="Mot de passe">
                    </div>
                </div>
                <div class="form-group">
                    <div class="controls">
                        <button class="btn btn-default pull-right" type="submit">Connexion</button>
                    </div>
                </div>
            </form>
            {{ link('default_passe',{},{'class':'btn btn-link'}) }}
            {{ link('default_register',{},{'class':'btn btn-link',name:'Pas encore membre ?'}) }}
        </div>
    </div>
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                 <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title"> Bienvenue {{ app.user }} !</h3>
                 </div>
                 <div class="modal-body">
                    Que dirais-tu de partager ton parcours avec l'ensemble du r√©seau ?
                 </div>

                 <div class="modal-footer">
                    <a href="{{ path('user_experience_index') }}" class="btn btn-success" data-dismiss="modal">GO</a>
                 </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascript %}
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(window).on('load',function(){
            console.log("TEST");
            $('#modal-message').modal('show');
        });
    </script>
{% endblock %}
