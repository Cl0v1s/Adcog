{% extends 'AdcogDefaultBundle::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('default_connexion') }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            <h2>Espace utilisateur</h2>
            <form class="form-horizontal" action="{{ path('default_check') }}" method="POST" novalidate>
                <div class="form-group">
                    <label class="col-lg-4 control-label" for="username">Email *</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ username }}" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4 control-label" for="password">Mot de passe *</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="password" id="password" name="_password" placeholder="Mot de passe">
                    </div>
                </div>
                <div class="form-group">
                    <div class="controls">
                        <button class="btn btn-default pull-right" type="submit">Connexion</button>
                    </div>
                </div>
            </form>
            {{ link('default_passe',{},{'class':'btn btn-link'}) }}
            {{ link('default_register',{},{'class':'btn btn-link',name:'Pas encore membre ?'}) }}
        </div>
    </div>
{% endblock %}
