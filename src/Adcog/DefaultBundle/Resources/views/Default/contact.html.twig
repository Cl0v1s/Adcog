{% extends 'AdcogDefaultBundle::layout.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('default_contact') }}</li>
{% endblock %}

{% block content_container_before %}
    <iframe id="map" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.fr/maps?q=109+avenue+Roul+33400+Talence&amp;ie=UTF8&amp;hq=&amp;hnear=109+Avenue+Roul,+33400+Talence,+Gironde,+Aquitaine&amp;gl=fr&amp;t=m&amp;ll=44.814663,-0.588198&amp;spn=0.021311,0.008583&amp;z=14&amp;iwloc=A&amp;output=embed"></iframe>
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-8">
            <h1>Contact</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-default pull-right" type="submit">Envoyer</button>
            {{ form_end(form) }}
        </div>
        <div class="col-sm-4">
            <h2>Adresses</h2>
            <address>
                <strong>Association ADCOG</strong><br>
                109 avenue Roul<br>
                33400 Talence
            </address>
            <br>
            <dl>
                <dt>Contact</dt>
                <dd><a href="mailto:contact@adcog.fr">contact@adcog.fr</a></dd>
            </dl>
        </div>
    </div>
{% endblock %}