{% extends 'AdcogAdminBundle:AdminSector:read.html.twig' %}

{% block title %}Modifier {{ sector }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('admin_sector_update',{sector:sector.id}) }}</li>
{% endblock %}

{% block subcontent %}
    <ul class="list-inline">
        <li>{{ link('admin_sector_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
        <li>{{ link('admin_sector_create',{},{class:'btn btn-xs btn-success',ficon:'plus'}) }}</li>
        <li>{{ link('admin_sector_read',{sector:sector.id},{class:'btn btn-xs btn-default',ficon:'tasks',name:sector,title:sector}) }}</li>
        <li>{{ link('admin_sector_replace',{sector:sector.id},{class:'btn btn-xs btn-info',ficon:'random'}) }}</li>
        <li>{{ link('admin_sector_delete',{sector:sector.id},{class:'btn btn-xs btn-danger',ficon:'trash-o'}) }}</li>
    </ul>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="row form-group">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li>{{ link('admin_sector_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
                <li>{{ link('admin_sector_create',{},{class:'btn btn-xs btn-success',ficon:'plus'}) }}</li>
                <li>{{ link('admin_sector_read',{sector:sector.id},{class:'btn btn-xs btn-default',ficon:'tasks',name:sector,title:sector}) }}</li>
                <li>{{ link('admin_sector_replace',{sector:sector.id},{class:'btn btn-xs btn-info',ficon:'random'}) }}</li>
                <li>{{ link('admin_sector_delete',{sector:sector.id},{class:'btn btn-xs btn-danger',ficon:'trash-o'}) }}</li>
                <li class="pull-right">
                    <button type="submit" class="btn btn-warning"><span class="fa fa-pencil"></span> {{ title() }}</button>
                </li>
            </ul>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}