{% extends 'AdcogAdminBundle:Admin:index.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('admin_employer_index') }}</li>
{% endblock %}

{% block subcontent %}
    {% include 'AdcogDefaultBundle::filter.html.twig' %}
    <ul class="list-inline">
        <li>{{ link('admin_employer_create',{},{class:'btn btn-xs btn-success',ficon:'plus'}) }}</li>
    </ul>
    <div class="row">
        <div class="table_responsive">
            <table class="{{ table_class }}">
                <thead>
                    <tr>
                        <th class="sm">#</th>
                        <th></th>
                        <th class="sm"></th>
                        <th class="sm"></th>
                        <th class="sm"></th>
                        <th class="sm"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for employer in paginator %}
                        <tr>
                            <td>{{ employer.id }}</td>
                            <td>{{ employer }}</td>
                            <td>{{ link('admin_employer_read',{employer:employer.id},{class:'btn btn-xs btn-default',ficon:'tasks',name:'',title:employer}) }}</td>
                            <td>{{ link('admin_employer_replace',{employer:employer.id},{class:'btn btn-xs btn-info',ficon:'random',name:'',title:employer}) }}</td>
                            <td>{{ link('admin_employer_update',{employer:employer.id},{class:'btn btn-xs btn-warning',ficon:'pencil',name:'',title:employer}) }}</td>
                            <td>{{ link('admin_employer_delete',{employer:employer.id},{class:'btn btn-xs btn-danger',ficon:'trash-o',name:'',title:employer}) }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="100%">
                                <p class="alert alert-info">Cette liste est vide ...</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}