{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('admin_experience_update',{experience:experience.id}) }}</li>
{% endblock %}

{% block subcontent %}
    <ul class="list-inline">
        <li>{{ link('admin_experience_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
        <li>{{ link('admin_experience_create',{},{class:'btn btn-xs btn-success',ficon:'plus'}) }}</li>
        <li>{{ link('admin_experience_read',{experience:experience.id},{class:'btn btn-xs btn-default',ficon:'tasks',name:experience,title:experience}) }}</li>
