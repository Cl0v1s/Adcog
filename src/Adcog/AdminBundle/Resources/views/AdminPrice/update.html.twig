{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('admin_price_update',{price:price.id}) }}</li>
{% endblock %}

{% block subcontent %}
    <ul class="list-inline">
        <li>{{ link('admin_price_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
