        <li>{{ link('admin_price_read',{price:price.id},{class:'btn btn-xs btn-default',ficon:'tasks',name:price,title:price}) }}</li>
        <li>{{ link('admin_price_delete',{price:price.id},{class:'btn btn-xs btn-danger',ficon:'trash-o'}) }}</li>
