    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="row form-group">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li>{{ link('admin_price_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
