                <li>{{ link('admin_price_delete',{price:price.id},{class:'btn btn-xs btn-danger',ficon:'trash-o'}) }}</li>
                <li class="pull-right">
                    <button type="submit" class="btn btn-warning"><span class="fa fa-pencil"></span> {{ title() }}</button>
                </li>
