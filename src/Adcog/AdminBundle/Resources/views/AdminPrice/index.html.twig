{% extends 'AdcogAdminBundle:Admin:index.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('admin_price_index') }}</li>
{% endblock %}

{% block subcontent %}
    {% include 'AdcogDefaultBundle::filter.html.twig' %}
    <ul class="list-inline">
        <li>{{ link('admin_price_create',{},{class:'btn btn-xs btn-success',ficon:'plus'}) }}</li>
    </ul>
    <div class="row">
        <div class="table_responsive">
            <table class="{{ table_class }}">
                <thead>
                    <tr>
                        <th class="sm">#</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Durée</th>
                        <th class="sm"></th>
                        <th class="sm"></th>
                        <th class="sm"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for price in paginator %}
                        <tr>
                            <td>{{ price.id }}</td>
                            <td>{{ price.title }}</td>
                            <td>{{ price.amount }}€</td>
                            <td>{{ price.duration }} an{{ price.duration > 1 ? 's' : '' }}</td>
                            <td>{{ link('admin_price_read',{price:price.id},{class:'btn btn-xs btn-default',ficon:'tasks',name:'',title:price}) }}</td>
                            <td>{{ link('admin_price_update',{price:price.id},{class:'btn btn-xs btn-warning',ficon:'pencil',name:'',title:price}) }}</td>
                            <td>{{ link('admin_price_delete',{price:price.id},{class:'btn btn-xs btn-danger',ficon:'trash-o',name:'',title:price}) }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="100%">
                                <p class="alert alert-info">Cette liste est vide ...</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}