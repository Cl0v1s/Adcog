{% extends 'AdcogUserBundle:UserAccount:index.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('user_account_profile') }}</li>
{% endblock %}

{% block subcontent %}
    {% if not app.user.uri %}
        <p class="alert alert-warning">
            Vous n'avez pas encore ajout√© de photo de profil.
        </p>
    {% endif %}
    {{ form_start(form) }}
    {{ form_row(form.file) }}
    <div class="row form-group">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li>{{ link('user_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
                <li class="pull-right">
                    <button type="submit" class="btn btn-warning"><span class="fa fa-pencil"></span> {{ title() }}</button>
                </li>
                <li class="pull-right">{{ form_widget(form.fileRemove,{label:'Supprimer la photo actuelle',attr:{class:'btn btn-danger'}}) }}</li>
            </ul>
        </div>
    </div>
    {{ form_end(form) }}
    <br><br>
    <img src="{{ app.user|user_profile }}" width="500" style="width:100%;"/>
{% endblock %}