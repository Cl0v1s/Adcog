{% extends 'AdcogUserBundle:UserEvent:read.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('user_event_participate',{event:event.id}) }}</li>
{% endblock %}

{% block subcontent %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="row form-group">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li>{{ link('user_event_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
                <li class="pull-right">
                    <button type="submit" class="btn btn-success"><span class="fa fa-thumbs-up"></span> {{ title() }}</button>
                </li>
            </ul>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}