{% extends 'AdcogBloggerBundle:BloggerStaticContent:read.html.twig' %}

{% block title %}{{ title(null,{'%entity%':staticContent}) }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>{{ link('blogger_static_content_update',{staticContent:staticContent.id},{},{vars:{'%entity%':staticContent }}) }}</li>
{% endblock %}

{% block subcontent %}
    <ul class="list-inline">
        <li>{{ link('blogger_static_content_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
        <li>{{ link('blogger_static_content_create',{},{class:'btn btn-xs btn-success',ficon:'plus'}) }}</li>
        <li>{{ link('blogger_static_content_read',{staticContent:staticContent.id},{class:'btn btn-xs btn-default',ficon:'comment'},{vars:{'%entity%':staticContent }}) }}</li>
        <li>{{ link('blogger_static_content_delete',{staticContent:staticContent.id},{class:'btn btn-xs btn-danger',ficon:'trash-o'},{vars:{'%entity%':staticContent }}) }}</li>
    </ul>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="row form-group">
        <div class="col-lg-12">
            <ul class="list-inline">
                <li>{{ link('blogger_static_content_index',{},{class:'btn btn-xs btn-default',ficon:'arrow-left'}) }}</li>
                <li>{{ link('blogger_static_content_create',{},{class:'btn btn-xs btn-success',ficon:'plus'}) }}</li>
                <li>{{ link('blogger_static_content_read',{staticContent:staticContent.id},{class:'btn btn-xs btn-default',ficon:'comment'},{vars:{'%entity%':staticContent }}) }}</li>
                <li>{{ link('blogger_static_content_delete',{staticContent:staticContent.id},{class:'btn btn-xs btn-danger',ficon:'trash-o'},{vars:{'%entity%':staticContent }}) }}</li>
                <li class="pull-right">
                    <button type="submit" class="btn btn-warning"><span class="fa fa-pencil"></span> {{ title() }}</button>
                </li>
            </ul>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}